<script>
/* ===== Data (replace with real projects later) ===== */
const projects = [
  {
    id: 'elevator',
    title: 'Advanced Elevator System (Roblox)',
    tech: ['Roblox Lua','Networking','Client-side SFX'],
    desc: 'A fully-featured elevator system with intelligent floor prioritization, sliding doors, remote controls, and per-player teleport music.',
    highlight: 'Slot-based occupancy, animation-driven doors, timed teleport safety; per-player audio.',
    tag: 'Game Systems'
  },
  {
    id: 'discordbot',
    title: 'Mod & Onboarding Bot (Discord)',
    tech: ['Python','discord.py','Postgres'],
    desc: 'Custom onboarding with modal verification, button puzzles, strike system, snipe logging, advanced moderation tools.',
    highlight: 'Role gating, ephemeral interactions, analytics dashboards, strike workflows.',
    tag: 'Bots'
  },
  {
    id: 'portfolio-site',
    title: 'Portfolio (Static / React)',
    tech: ['React','Tailwind','Framer-Motion'],
    desc: 'A visually-rich responsive portfolio with animated timeline and accessible components.',
    highlight: 'Dark red-black-red theme, design system & component library.',
    tag: 'Websites'
  },
  {
    id: 'inventory',
    title: 'Custom Inventory & Hotbar (Roblox)',
    tech: ['Roblox Lua','UI/UX'],
    desc: 'Drag/drop inventory, custom hotbar integration, syncing with server-owned tool instances.',
    highlight: 'Optimised replication, client-server separation, smooth UX.',
    tag: 'Game Systems'
  },
  {
    id: 'analytics',
    title: 'Moderation Analytics Dashboard',
    tech: ['Python','FastAPI','React'],
    desc: 'Realtime and historical moderation analytics, alerting, and moderator tools for large communities.',
    highlight: 'High-throughput ingestion, alerting pipelines and retention policies.',
    tag: 'Websites'
  },
  {
    id: 'onboarding',
    title: 'Interactive Onboarding & Verification',
    tech: ['Discord API','Buttons','Modals'],
    desc: 'Two-step verification with randomized string modals and interactive color puzzles for high-assurance verification.',
    highlight: 'Ephemeral flows, role gating, automated role removal on fail.',
    tag: 'Bots'
  }
];

/* ===== UI rendering ===== */
const projectsRoot = document.getElementById('projects');
const tagsRoot = document.getElementById('tags');
const modal = document.getElementById('modal');
const modalContent = document.getElementById('modalContent');
const modalClose = document.getElementById('modalClose');
const yearEl = document.getElementById('year');
yearEl.textContent = new Date().getFullYear();

let activeTag = 'all';
let query = '';

function uniqueTags(arr){
  const s = new Set(arr.map(p=>p.tag));
  return ['all',...s];
}

function renderTags(){
  const tags = uniqueTags(projects);
  tagsRoot.innerHTML = '';
  tags.forEach(t=>{
    const b = document.createElement('button');
    b.className = 'tag' + (t===activeTag?' active':'');
    b.textContent = t;
    b.onclick = ()=>{ activeTag=t; renderTags(); renderProjects(); }
    tagsRoot.appendChild(b);
  });
}

function renderProjects(){
  const q = query.trim().toLowerCase();
  const filtered = projects.filter(p=>{
    const matchesTag = activeTag==='all' || p.tag===activeTag;
    const matchesQuery = q==='' || p.title.toLowerCase().includes(q) || p.desc.toLowerCase().includes(q) || p.tech.join(' ').toLowerCase().includes(q);
    return matchesTag && matchesQuery;
  });

  projectsRoot.innerHTML = '';
  filtered.forEach(p=>{
    const el = document.createElement('article');
    el.className = 'proj';
    el.innerHTML = `
      <div class="badge">${p.title.split(' ')[0].slice(0,2).toUpperCase()}</div>
      <div style="flex:1">
        <div style="display:flex;justify-content:space-between;align-items:center">
          <h4>${p.title}</h4>
          <div class="tiny muted">${p.tech.join(' â€¢ ')}</div>
        </div>
        <p>${p.desc}</p>
        <div class="projmeta">
          <span class="pill">${p.tag}</span>
          <button class="lead-cta" data-id="${p.id}">View case âžœ</button>
        </div>
      </div>
    `;
    projectsRoot.appendChild(el);
  });

  // attach listeners
  document.querySelectorAll('[data-id]').forEach(btn=>{
    btn.onclick = (e)=>{
      const id = e.currentTarget.getAttribute('data-id');
      openModal(projects.find(x=>x.id===id));
    }
  });
}

function openModal(project){
  modalContent.innerHTML = `
    <div style="display:flex;gap:18px;align-items:flex-start">
      <div style="flex:1">
        <h2 style="margin:0 0 8px 0">${project.title}</h2>
        <div class="tiny muted">${project.tech.join(' â€¢ ')}</div>
        <p style="margin-top:12px;color:var(--muted)">${project.desc}</p>

        <h4 style="margin-top:12px;margin-bottom:6px">Highlights</h4>
        <div style="color:var(--muted)">${project.highlight}</div>

        <h4 style="margin-top:12px;margin-bottom:6px">Tech stack</h4>
        <div style="display:flex;gap:8px;flex-wrap:wrap">
          ${project.tech.map(t=>`<span class="pill">${t}</span>`).join('')}
        </div>

        <div style="margin-top:16px;display:flex;gap:10px">
          <a class="lead-cta" href="#" onclick="return false">Open repo</a>
          <a class="lead-cta" href="#" onclick="return false">Live demo</a>
        </div>
      </div>

      <aside style="width:280px;padding:12px;border-radius:12px;background:rgba(0,0,0,0.25);border:1px solid rgba(255,255,255,0.02)">
        <div style="font-size:13px;color:var(--muted);font-weight:700">Project metadata</div>
        <ul style="margin-top:10px;color:var(--muted);font-size:13px;line-height:1.6;padding-left:16px">
          <li>Duration: 6â€“12 weeks (typical)</li>
          <li>Role: Lead dev & designer</li>
          <li>Team: 1â€“4 engineers</li>
          <li>Impact: Reduced load times & improved UX</li>
        </ul>
      </aside>
    </div>
  `;
  modal.style.display = 'flex';
  document.body.style.overflow = 'hidden';
}

modalClose.onclick = ()=>{ modal.style.display='none'; document.body.style.overflow=''; }
modal.onclick = (e)=>{ if(e.target===modal){ modal.style.display='none'; document.body.style.overflow=''; } }

/* search */
const searchInput = document.getElementById('search');
const clearSearch = document.getElementById('clearSearch');

searchInput.addEventListener('input', (e)=>{ query = e.target.value; renderProjects(); });
clearSearch.addEventListener('click', ()=>{ query=''; searchInput.value=''; renderProjects(); });

/* init */
renderTags();
renderProjects();

/* keyboard: ESC closes modal */
document.addEventListener('keydown', (e)=>{ if(e.key==='Escape'){ modal.style.display='none'; document.body.style.overflow=''; } });

/* OPTIONAL: throttled search for large lists (not necessary here) */
/* You can later swap in dynamic loading, API endpoints, and real repo/demo links. */
</script>
</body>
